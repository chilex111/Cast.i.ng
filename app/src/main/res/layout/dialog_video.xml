<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:minHeight="300dp"
    android:minWidth="360dp"
    tools:ignore="HardcodedText"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/editAudioTitle"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Audio Title"
            android:background="@drawable/rectangle_line_grey"
            android:inputType="text" />
        <Spinner
            android:id="@+id/editYear"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Year"
            android:padding="8dp"
            android:layout_marginTop="10dp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="0.7dp"
            android:background="@color/grey"/>
        <Spinner
            android:id="@+id/spinnerRole"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Audio Title"
            android:padding="8dp"
            android:layout_marginTop="10dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey"/>
        <EditText
            android:id="@+id/editAudioUrl"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Add Audio url"
            android:layout_marginTop="10dp"
            android:padding="8dp"
            android:background="@drawable/rectangle_line_grey"
            android:inputType="textUri" />
        <Button
            android:id="@+id/buttonSave"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Save Audio"
            android:layout_marginTop="20dp"
            android:background="@drawable/rectangle_margenta"
            android:textColor="@color/white"
            android:textStyle="bold"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>